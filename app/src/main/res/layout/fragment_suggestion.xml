<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/suggestionFragment"
    android:paddingHorizontal="15dp"
    tools:context=".ui.fragment.suggestion.SuggestionFragment">
    <TextView
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suggestion_title"
        android:layout_marginVertical="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/recyclerview_item_suggestion"
            android:id="@+id/suggestion_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp" />




</LinearLayout>