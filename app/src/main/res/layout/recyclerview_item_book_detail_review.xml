<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/my_info_item_background"
    android:paddingHorizontal="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    android:paddingVertical="5dp">




    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recyclerView_item_book_detail_imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/recyclerView_item_book_detail_textView_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이다혜"
                android:textSize="11sp" />




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/recyclerView_item_book_detail_ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.0"
                    android:scaleY="1.0"
                    android:layout_marginEnd="2dp"
                    android:maxWidth="15dp"
                    android:minWidth="15dp"
                    android:rating="5"
                    android:theme="@style/RatingBar" />
                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/recyclerView_item_book_detail_imageBtn_like"
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:background="@null"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_like" />

                    <TextView
                        android:id="@+id/recyclerView_item_book_detail_textView_like"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="9sp" />

                </LinearLayout>



            </LinearLayout>




        </LinearLayout>

        <TextView
            android:id="@+id/recyclerView_item_book_detail_textView_contents"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="생각보다 너무 책이 좋네요!! 생각보다 너무 책이 좋네요!!
생각보다 너무 책이 좋네요!! 너무 . . .
"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/my_info_my_review_item_writer" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/recyclerView_item_book_detail_textView_date"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="@color/gray6"
                android:text="2022-02-14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/recyclerView_item_book_detail_textView_expand"
                android:textSize="8sp"
                android:text="펼쳐보기▼"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>




</LinearLayout>